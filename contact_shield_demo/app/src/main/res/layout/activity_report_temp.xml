<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/guid_lable_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="GUID"/>
    <Button
        android:id="@+id/scan_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="SCAN"/>
    <TextView
        android:id="@+id/guid_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <Button
        android:id="@+id/submit_guid_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="SUBMIT"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#000000"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/teletan_label_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TELETAN"/>
    <EditText
        android:id="@+id/teletan_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input teletan here"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>
    <Button
        android:id="@+id/submit_teletan_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="SUBMIT"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#000000"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/smstan_label_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TELETAN"/>
    <EditText
        android:id="@+id/phone_number_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input Phone Number Here"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>
    <EditText
        android:id="@+id/smstan_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input SMSTAN Here"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>
    <Button
        android:id="@+id/submit_smstan_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="SUBMIT"/>
</LinearLayout>