<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_engine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start engine"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/stop_engine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop engine"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/get_periodical_key_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get periodical key"
        android:layout_marginTop="30dp"
       />

    <Button
        android:id="@+id/clear_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear data"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/periodical_key_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/valid_time_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        />


    <Button
        android:id="@+id/put_shared_key_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="put shared key"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/get_contact_sketch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get contact sketch"
        android:layout_marginTop="30dp"
        />

</LinearLayout>